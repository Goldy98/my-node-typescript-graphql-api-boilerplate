{
  "compilerOptions": {
    "strict": false,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "lib": [
      "dom",
      "ESNext",
      "es2018"
    ],
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmitOnError": true,
    "esModuleInterop": true
  },
  "exclude": [ "node_modules", "scripts" ],
  "include": ["src/**/*", "gql-schemas/**/*"]
}
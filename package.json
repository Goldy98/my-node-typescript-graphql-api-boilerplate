{
  "name": "node-typescript-graphql-api-boiler",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "description": "This is a started point for a GraphQL + TypeScript + NodeJS API",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf 'dist/*'",
    "build": "npm run clear && npm run extract-gql-types && tsc && cp -r ./src/gql-schemas ./dist",
    "dev": "NODE_ENV=development node dist/index.js",
    "serve": "npm run build  && node_modules/.bin/tsc-watch --onSuccess 'npm run dev'",
    "start": "NODE_ENV=production node dist/index.js --config ./config.production.json",
    "extract-gql-types": "node scripts/extract-gql-types.js"
  },
  "author": "SAGBO Aim√©",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "~6.2.1",
    "@graphql-tools/load": "^6.2.5",
    "@graphql-tools/schema": "~6.2.1",
    "@ladc/mysql-adapter": "^0.22.15",
    "@ladc/mysql2-adapter": "^0.22.14",
    "@ladc/sql-bricks-modifier": "^0.22.7",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.6",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.22",
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "graphql": "^15.4.0",
    "ladc": "^0.22.14",
    "multer": "^1.4.2",
    "sql-bricks": "^2.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/core": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@types/graphql": "^14.5.0",
    "@types/webpack-env": "^1.14.1",
    "clean-webpack-plugin": "^3.0.0",
    "ts-loader": "^6.2.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
